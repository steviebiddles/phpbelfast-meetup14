{% extends 'base.html.twig' %}

{% block body_id 'homepage' %}

{#
    the homepage is a special page which displays neither a header nor a footer.
    this is done with the 'trick' of defining empty Twig blocks without any content
#}
{% block header %}{% endblock %}
{% block footer %}{% endblock %}

{% block body %}
    <div class="page-header">
        <h1>{{ 'title.homepage'|trans|raw }}</h1>
        <p>The first Symfony commit was {{ '18/10/2005'|age }} years ago on 18/10/2005.</p>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="jumbotron">
                <p>
                    {{ 'help.browse_app'|trans|raw }}
                </p>
                <p>
                    <a class="btn btn-primary btn-lg" href="{{ path('blog_index') }}">
                        <i class="fa fa-users"></i> {{ 'action.browse_app'|trans }}
                    </a>
                </p>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="jumbotron">
                <p>
                    {{ 'help.browse_admin'|trans|raw }}
                </p>
                <p>
                    <a class="btn btn-primary btn-lg" href="{{ path('admin_index') }}">
                        <i class="fa fa-lock"></i> {{ 'action.browse_admin'|trans }}
                    </a>
                </p>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-sm-12">
            <div class="jumbotron">
                <p>Browse the <b>quotes section</b> of the demo application.</p>
                <a class="btn btn-primary btn-lg" href="{{ path('quote_index') }}">
                    <i class="fa fa-quote-left"></i> View all Quotes
                </a>
            </div>

        </div>

    </div>
    
    <div class="row">

        <div class="col-sm-6">

            {% if random_quote_event is defined and not null %}

                <blockquote class="text-left" cite="{{ random_quote_event.author }}">
                    {{ random_quote_event.quote }}
                    <small>{{ random_quote_event.author }} at <cite title="PHP Belfast">PHP Belfast</cite></small>
                </blockquote>

            {% endif %}

        </div>

        <div class="col-sm-6">

            {% if random_quote_extension is defined and not null %}

                <blockquote class="blockquote-reverse" cite="{{ random_quote_extension.author }}">
                    {{ random_quote_extension.quote }}
                    <small>{{ random_quote_extension.author }} at <cite title="PHP Belfast">PHP Belfast</cite></small>
                </blockquote>

            {% endif %}

        </div>

    </div>

{% endblock %}
